{
    "name": "getpop/user-roles-wp",
    "type": "library",
    "description": "Implementation for WordPress of contracts from package \"User Roles\"",
    "keywords": [
        "PoP",
        "user-roles-wp"
    ],
    "homepage": "https://github.com/getpop/user-roles-wp",
    "license": "MIT",
    "authors": [
        {
            "name": "Leonardo Losoviz",
            "email": "leo@getpop.org",
            "homepage": "https://getpop.org"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php" : "~7.1",
        "getpop/user-roles": "dev-master",
        "getpop/users-wp": "dev-master"
    },
    "require-dev": {
        "getpop/user-state-wp": "dev-master",
        "phpunit/phpunit": ">=9.2",
        "squizlabs/php_codesniffer": "^3.0",
        "szepeviktor/phpstan-wordpress": "^0.6.2"
    },
    "suggest": {
        "getpop/user-state-wp": "Integration with User State"
    },
    "autoload": {
        "psr-4": {
            "PoP\\UserRolesWP\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PoP\\UserRolesWP\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests",
        "analyse": "phpstan analyse -c phpstan.neon.dist"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
